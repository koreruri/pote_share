<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag(@room.image, alt: '部屋画像') if @room.image.attached? %>
      <% if @room.image.attached? %>
        <%= image_tag(@room.image, alt: "部屋画像", class: 'room-show-image') %>
      <% else %>
        <%= image_tag('/assets/room01.jpg', alt: "部屋画像", class: 'room-show-image') %>
      <% end %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <% if @room.user.image.attached? %>
            <%= link_to image_tag(@room.user.image, class: 'host-icon'), '/' %>
          <% else %>
            <%= link_to image_tag('/assets/default_icon.jpg', class: 'host-icon'), '/' %>
          <% end %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.introduction %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <form action="/reservations/new" accept-charset="UTF-8" method="get">
          <%= form_with do |f| %>
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: 'form-control mb-4' %>
            <%= f.label :end_date %>
            <%= f.date_field :end_date, class: 'form-control mb-4' %>
            <%= f.label :person_num %>
            <%= f.number_field :end_date, class: 'form-control mb-4' %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <% if logged_in? %>
              <%= f.submit '予約する', class: 'btn btn-primary form-control' %>
            <% else %>
              <a class="btn btn-primary form-control" href="/users/sign_in">ログイン</a>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>