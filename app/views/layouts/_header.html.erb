<header class="header">
  <div class="header-inner">
    <div class="header-left-nav">
      <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png", alt: "サイトのロゴ画像"), root_path, id: "logo" %>
      <%= form_with url: "#" do |f| %>
        <div class="header-search d-lg-inline-block d-none">
          <input type="text" name="area" id="area" value="" class="form-control" placeholder="エリア">
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <div class="header-search d-lg-inline-block d-none">
          <input type="text" name="keyword" id="keyword" value="" class="form-control" placeholder="キーワード">
          <i class="fas fa-search"></i>
        </div>
        <input type="submit" name="commit" value="" class="d-none" data-disable-with="">
      <% end %>
    </div>
    
    <div class="header-right-nav">
      <% if logged_in? %>
        <div class="nav-item d-sm-inline-block d-none">
          <%= current_user.name %>
        </div>
        <div class="nav-item">
          <% if current_user.image.attached? %>
            <%= image_tag(current_user.image, alt: "メニュー", class: 'mx-3 p-1 host-icon nav-trigger') %>
          <% else %>
            <%= image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg", alt: "メニュー", class: 'mx-3 p-1 host-icon nav-trigger') %>
          <% end %>
          <ul class="header-nav-menu" style= "display: none;">
            <li><%= link_to "ルーム登録", "#" %></li>
            <li><%= link_to "予約済みルーム一覧", "#" %></li>
            <li><%= link_to "登録済みルーム一覧", "#" %></li>
            <li><%= link_to "設定", users_account_path %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          </ul>
        </div>
      <% else %>
        <div class="nav-item">
          <%= link_to "ログイン", users_sign_in_path, class: "btn btn-primary my-2 mx-3" %>
          <%= link_to "登録する", users_sign_up_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</header>

<script>
  $(function() {
    $('.nav-trigger').click(function() {
          $('.header-nav-menu').toggle(1500);
      })
  });
</script>
