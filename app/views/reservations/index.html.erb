<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td>
              <%= link_to reservation.room do %>
                <% if reservation.room.image.attached? %>
                  <%= image_tag(reservation.room.image, alt: "部屋画像", class: 'room-posts-image') %>
                <% else %>
                  <%= image_tag('/assets/room01.jpg', alt: "部屋画像", class: 'room-posts-image') %>
                <% end %>
              <% end %>
            </td>
            <td class="posts-name"><%= link_to reservation.room.name, reservation.room %></td>
            <td class="posts-content"><%= reservation.room.introduction %></td>
            <td class="price-icon"><%= reservation.room.price * reservation.person_num %></td>
            <td><%= reservation.start_date.to_s(:date_jp) %></td>
            <td><%= reservation.end_date.to_s(:date_jp) %></td>
            <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
